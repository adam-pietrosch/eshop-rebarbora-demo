<%- include('../partials/_header') %>
<%- include('../partials/_navbar') %>


<div class="container edit-product-page">
    <h2>Upravit - <%= product.title %></h2>

    <% if (successMsg) { %>
        <span id="added-product-span"><%= successMsg %></span>
    <% } %>

    <div class="row">

        <form action="/obchod/upravit/<%= product._id %>" method="POST">

            <div class="input-field col s12 m6 offset-m3">
                <input value="<%= product.title %>" name="title" id="title" type="text" class="validate" required>
                <label for="title">Název</label>
            </div>
            <div class="input-field col s12 m6 offset-m3">
                <textarea name="shortDescription" id="short_des" class="materialize-textarea" maxlength="130"required><%= product.shortDescription %></textarea>
                <label for="short_des">Krátký popis</label>
            </div>
            <div class="input-field col s12 m6 offset-m3">
                <textarea name="longDescription" id="long_des" class="materialize-textarea" required><%= product.longDescription %></textarea>
                <label for="long_des">Dlouhý popis</label>
            </div>
            <div class="input-field col s12 m6 offset-m3">
                <input value="<%= product.price %>" name="price" id="price" type="number" class="validate" required>
                <label for="price">Cena</label>
            </div>
            <div class="file-field input-field col s12 m6 offset-m3">
                <i class="material-icons prefix grey-text left">file_upload</i>
                <input name="img" type="file" multiple>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text" placeholder="Zvolit jiné fotky.">
                </div>
            </div>
            <div class="col s2 offset-s5">
                <button class="submit-new white-text light-green" type="submit">Uložit</button>
            </div>

        </form>
    </div>
</div>


<%- include('../partials/_footer') %>