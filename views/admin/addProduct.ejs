<%- include('../partials/_header') %>
<%- include('../partials/_navbar') %>


<%- include('../partials/_adminSideBar') %>
<div class="main container edit-product-page">
    <a class="side-bar-summoner"><i class="material-icons">arrow_forward</i></a>
    
    <h2>Přidat nový produkt</h2>

    <div class="row">

        <form action="/admin/novy-produkt" method="POST" enctype="multipart/form-data">

            <div class="input-field col s12 m6 offset-m3">
                <input name="title" id="title" type="text" class="validate" required>
                <label for="title">Název</label>
            </div>
            <div class="input-field col s12 m6 offset-m3">
                <textarea name="shortDescription" id="short_des" class="materialize-textarea" maxlength="130"
                    required></textarea>
                <label for="short_des">Krátký popis</label>
            </div>
            <div class="input-field col s12 m6 offset-m3">
                <textarea name="longDescription" id="long_des" class="materialize-textarea" required></textarea>
                <label for="long_des">Dlouhý popis</label>
            </div>
            <div class="input-field col s12 m6 offset-m3">
                <input name="price" id="price" type="number" class="validate" required>
                <label for="price">Cena</label>
            </div>
            <div class="file-field input-field col s12 m6 offset-m3">
                <i class="material-icons prefix grey-text left">file_upload</i>
                <input name="img" type="file" multiple required>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text" placeholder="Nahrajte jednu nebo více fotek">
                </div>
            </div>
            <div class="col s2 offset-s5">
                <button class="submit-new white-text light-green" type="submit">Uložit</button>
            </div>

        </form>
    </div>
</div>


<%- include('../partials/_footer') %>